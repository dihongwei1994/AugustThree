<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="15dp"
    android:paddingLeft="20dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:textColor="#1D2633"
        android:letterSpacing="0.01"
        android:textScaleX="0.95"
        android:lineSpacingExtra="5dp"
        android:textSize="15sp"
        android:text="标题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/content"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:textColor="#1D2633"
        android:letterSpacing="0.01"
        android:textScaleX="0.95"
        android:lineSpacingExtra="5dp"
        android:textSize="14sp"
        android:text="每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负每一个不曾起舞的日子，都是对时光的辜负"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/edit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/content"
        android:src="@mipmap/ic_edit"
        android:padding="3dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/edit"
        android:layout_marginTop="10dp"
        android:layout_below="@id/content"
        android:src="@mipmap/ic_delete"
        android:padding="3dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/changer"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/delete"
        android:layout_marginTop="10dp"
        android:layout_below="@id/content"
        android:src="@mipmap/ic_changer"
        android:padding="3.5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/window"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/changer"
        android:layout_marginTop="10dp"
        android:layout_below="@id/content"
        android:src="@mipmap/ic_window"
        android:padding="3.5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@id/edit"
        android:textSize="12sp"
        android:text="2020-02-02"
        android:textColor="#1D2633"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@id/time"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#3D3D3D"/>

</RelativeLayout>